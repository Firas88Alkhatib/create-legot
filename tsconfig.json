{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["src/template/**/*"],
  "ts-node": {
    "esm": true
  },
  "lib": ["esnext"]
}
